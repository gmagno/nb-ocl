    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: NB-OCL",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/nb-ocl/nb_ocl.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Setuptools",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/setup.py",
            "console": "integratedTerminal",
            "args": [
                "install",
            ],
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}